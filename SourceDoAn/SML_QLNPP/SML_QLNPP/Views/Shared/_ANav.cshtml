@using DataModel;
@{
    var admin = Session["admin"] as Account;
}

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/AdminLTE/images/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@admin.UserName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">Menu chức năng</li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-table"></i> <span>Quản lý đặt hàng</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/Order/List"><i class="fa fa-arrow-circle-o-right"></i> Tìm kiếm đơn hàng</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-table"></i> <span>Quản lý khuyến mãi</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/Promotion/List"><i class="fa fa-arrow-circle-o-right"></i> Tìm kiếm khuyến mãi</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-table"></i> <span>Quản lý sản phẩm</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/Product/List"><i class="fa fa-arrow-circle-o-right"></i> Tìm kiếm sản phẩm</a></li>
                    <li><a href="/Product/Create"><i class="fa fa-arrow-circle-o-right"></i> Tạo sản phẩm mới</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-table"></i> <span>Quản lý giao hàng</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("List", "DeliveryOrder")"><i class="fa fa-arrow-circle-o-right"></i> Tìm kiếm đơn giao hàng</a></li>
                    <li><a href="@Url.Action("Create", "DeliveryOrder")"><i class="fa fa-arrow-circle-o-right"></i> Lập đơn giao hàng</a></li>
                    <li><a href="@Url.Action("List", "Bill")"><i class="fa fa-arrow-circle-o-right"></i> Tìm hóa đơn</a></li>
                    <li><a href="@Url.Action("Create", "Bill")"><i class="fa fa-arrow-circle-o-right"></i> Lập hóa đơn</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-table"></i> <span>Quản lý đổi trả</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("Index", "Return")"><i class="fa fa-arrow-circle-o-right"></i> Tìm kiếm phiếu đổi trả</a></li>
                    <li><a href="@Url.Action("Create", "Return")"><i class="fa fa-arrow-circle-o-right"></i> Lập phiếu đổi trả</a></li>
                    
                </ul>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
