@model SML_QLNPP.Models.CreateBillViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ALayout.cshtml";
}
@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Bill/create.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Bill/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Bill/bill.js"></script>
}
<h2>Hóa Đơn</h2>

<div class="box box-info">
    <div class="box-header with-border">
        @{
            if (ViewBag.msg != null)
            {
                if (ViewBag.types == 1)
                {
                    <div class="alert alter-warning"><strong>@ViewBag.msg</strong></div>
                }
                else if (ViewBag.types == 2)
                {
                    <div class="alert alter-success"><strong>@ViewBag.msg</strong></div>
                }
            }
        }
        <h3 class="box-title">Thông tin hóa đơn</h3>
    </div>
@using (Html.BeginForm("Create", "Bill", FormMethod.Post))
{
    <div class="box-body">
        <div class="col-md-3 form-group">
            @Html.Label("Mã nhân viên:")
            @Html.TextBoxFor(model => model.idStaff, "", new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.idStaff, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Mã giao hàng số:")
            @Html.TextBoxFor(model => model.idDeliveryOrder, "", new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.idDeliveryOrder, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Mã nhà phân phối:")
            @Html.TextBoxFor(model => model.idDistributor, "", new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Tên nhà phân phối:")
            @Html.TextBoxFor(model => model.nameDistributor, "", new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Ngày lập:")
            @Html.TextBoxFor(model => model.createdDate, "{0:dd/MM/yyyy}", new { @type = "date", @class = "form-control", @readonly = "readonly", @strDate = Model.createdDate.ToLocalTime() })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Loại hóa đơn:")
            @Html.DropDownListFor(model => model.types, new List<SelectListItem> {
           new SelectListItem { Text = "Thanh toán giao hàng", Value = "1", Selected = true },
       new SelectListItem { Text = "Thanh toán công nợ", Value = "2"}
       }, new { @class = "form-control" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Tiền thu:")
            @Html.TextBoxFor(model => model.purchase, "", new { @type = "number", @class = "form-control", @min = 0, required = "required" })
            @Html.ValidationMessageFor(model => model.purchase, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3 form-group">
            @Html.Label("Mô tả:")
            @Html.TextBoxFor(model => model.description, "", new { @class = "form-control", required = "required" })
        </div>
        <div class="col-md-12 form-group" style="text-align: center;">
            <input type="submit" value="Lập hóa đơn" class="btn btn-primary" style="margin-right: 5px;" id="btnCreate" />
        </div>
    </div>
}
</div>